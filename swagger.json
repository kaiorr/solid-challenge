{
  "openapi": "3.0.0",
  "info": {
    "title": "ATLAS",
    "description": "Essa é uma documentação sobre o ATLAS API",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "description": "Gerenciamento de usuários",
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "description": "Campos obrigatórios para criação de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "jhondoe@email.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "14d6d88a-bcef-4d0d-888d-2004fa292b84"
                      },
                      "name": {
                        "type": "string",
                        "example": "John Doe"
                      },
                      "admin": {
                        "type": "boolean",
                        "example": false
                      },
                      "email": {
                        "type": "string",
                        "example": "jhondoe@email.com"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2020-05-05T17:00:00.000Z"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2020-05-05T17:00:00.000Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "User all ready exists."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
